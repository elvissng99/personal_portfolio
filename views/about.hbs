<div class = "container centre">
{{#if session.isLoggedIn}}
    {{#if successful}}
    <div class = "greentext">
        <p>The About section has been successfully edited.</p>
    </div>
    {{else}}
    <div>{{errorMessages}}</div>
    {{/if}}
        {{#if about}}
            <form method="POST" action="about">
                <div class = "blacktext about">
                    <h2>Title</h2><br>
                </div>
                <div class = "textbox">
                    <input name='title' type="text" value="{{about.title}}">
                </div>
                <br>
                <div class = "blacktext">
                    <h2>Description</h2><br>
                </div>
                <div class = "textbox">
                    <textarea name="description" rows="15" cols="60">{{about.description}}</textarea>
                </div>
                <br><br>
                <div class = "backbutton">
                    <button type="submit">Save</button>
                </div>
            </form>
        {{else}}
            <form method="POST" action="about">
                <input type="text" >
                <input type="text" >
            </form>
        {{/if}}
</div>
{{else}}
    <div class = "flex-container">
        {{#if about}}
        <div class = "about">
            <img src="KTAbout.jpg" alt="Kaitao About Picture">
        </div>
        <div class = "about">
            <div class = "justblue">
                <h2>{{about.title}}</h2><br><br>
            </div>
            <div class = "createspace">
                <p>{{about.description}}<p>
            </div>
        </div>
        {{else}}
            NO ABOUT DATA
        {{/if}}
    </div>
{{/if}}

