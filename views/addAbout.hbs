<div class = "container centre">
    {{#if successful}}
    <div class = "greentext">
        <p>The About section has been successfully edited.</p>
    </div>
    {{else}}
    <div>{{errorMessages}}</div>
    {{/if}}
    <form method="POST" action="/addAbout">
        <div class = "blacktext about">
            <h2>Title</h2><br>
        </div>
        <div class = "textbox">
            <input name='title' type="text" >
        </div>
        <br>
        <div class = "blacktext">
            <h2>Description</h2><br>
        </div>
        <div class = "textbox">
            <textarea name="description" rows="15" cols="60"></textarea>
        </div>
        <br><br>
        <div class = "backbutton">
            <button type="submit">Add</button>
        </div>
    </form>
</div>
