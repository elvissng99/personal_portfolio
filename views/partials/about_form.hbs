<div class = "aboutinfocontainer">
    <div>
        <h3>Description</h3>
    </div>
    <div>
        <textarea name="description" rows="4" cols="50" placeholder="Enter Description">{{description}}</textarea>
    </div>
    {{#if isSuccessful}}
        <div>
            Updated Successfully
        </div>
    {{/if}}
    {{#if errorMessages.length}}
        <div class = "errormessage">
            {{#each errorMessages}}
                <p>{{this}}</p>
            {{/each}}
        </div>
    {{/if}}
    <div class = "loginbuttoncontainer">
        <button type="submit">Submit</button><a href="/about/admin">
        <button type="button">Back</button></a>
    </div>
</div>